@model WebAppNet2.Models.Entities.Catalog.Categories

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Categories</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@Url.Action("Edit","Categories",new{area = "Admin"})" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryID" name="CategoryID"/>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"> Tên danh mục</label>
                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
