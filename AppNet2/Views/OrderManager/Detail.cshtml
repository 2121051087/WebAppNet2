@model WebAppNet2.Models.DTO.OrdersDTO
@{
    ViewData["Title"] = "Đơn hàng chi tiết";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="row m-3">
    <h3 class="card-title col-8">Trạng thái : <b class="text-primary">@Model.Status</b></h3>
</div>
<hr />

<div class="container">
    <div class="row">
        <!-- Div trên chiếm 5/12 màn hình -->
        <div class="col-5 " >
            <div class="">
                <div>
                    <p class="card-text">Họ và tên : <b>@Model.fullName</b></p>
                    <p class="card-text">SĐT       : <b>@Model.PhoneNumber</b></p>
                    <p class="card-text">Địa chỉ   : <b>@Model.Address</b></p>
                </div> 
                <p class="card-text"></p>
            </div>
        </div>

        <!-- Khoảng trắng chiếm 1/12 màn hình -->
        <div class="col-1"></div>

        <!-- Div dưới chiếm 6/12 màn hình -->
        <div class="col-6">
            <div class="order-items">
                @foreach (var item in Model.orderDetailDTO)
                {
                    <div class="row mb-3 align-items-center border-bottom pb-2 order-item">
                        <!-- Ảnh sản phẩm -->
                        <div class="col-2 d-flex align-items-center justify-content-center">
                            <img src="@item.Image" alt="ảnh" class="img-fluid rounded" style="max-height: 50px; width: auto;" />
                        </div>
                        <!-- Thông tin sản phẩm -->
                        <div class="col-4 d-flex flex-column justify-content-center">
                            <p class="fw-bold mb-0">@item.ProductName</p>
                            <p class="mb-0 text-muted">@item.ColorName / @item.SizeName</p>
                        </div>
                        <div class="col-4 text-danger">@string.Format("{0:C0}", @item.Price)</div>
                       
                        <!-- Số lượng -->
                        <div class="col-2 d-flex align-items-center justify-content-center">
                            <p class="mb-0 text-danger">x @item.Quantity</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row m-3">
    <h3 class="text-danger col-4" style="position: absolute; bottom: 40px; right: 20px;"><b class="text-dark">Tổng tiền :</b>  @string.Format("{0:C0}", @Model.TotalAmount)</h3>
</div>
