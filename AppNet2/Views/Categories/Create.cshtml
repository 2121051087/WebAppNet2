@model WebAppNet2.Models.DTO.CategoriesVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Tạo mới danh mục</h1>


<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label m-2">Tên danh mục</label>
                <input asp-for="CategoryName" class="form-control m-2" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group d-flex align-items-center gap-2">
                <input type="submit" value="Thêm danh mục" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>



