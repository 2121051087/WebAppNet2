@model WebAppNet2.Models.DTO.CategoriesVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Cập nhật danh mục</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryID" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label m-1">Tên danh mục</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group d-flex align-items-center gap-2 m-3">
                <input type="submit" value="Lưu" class="btn btn-primary m-1" />
            
                <a asp-action="Index" class="btn btn-secondary m-1">Back to List</a>
            </div>
        </form>
    </div>
</div>



