@model IEnumerable<WebAppNet2.Models.Entities.Catalog.Categories>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Danh mục</h1>

<p>
    <a href="@Url.Action("Create","Categories")" class="btn btn-primary">Thêm danh mục</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Tên danh mục")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a href="@Url.Action("Edit","Categories",new{id = item.CategoryID})" class="btn btn-warning ">Cập nhật</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoryID" class=" btn btn-success">Chi tiết</a> |
                    <a href="@Url.Action("Delete","Categories",new{id = item.CategoryID})" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }

    </tbody>
</table>
