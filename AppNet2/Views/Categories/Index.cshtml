@model  List<WebAppNet2.Models.DTO.CategoriesVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    string searchString = ViewData["searchString"] as string;
}

<h1 class="mt-2">Danh sách danh mục </h1>

<!-- Search Form -->
<div class="row justify-content-center">
    <div class="col-6 m-4">
        <form asp-action="Index" asp-controller="Categories" method="get" class="mb-3">
            <div class="input-group">
                <!-- Search string will be passed via the form -->
                <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm danh mục..." value="@searchString" />
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </div>
        </form>
    </div>
</div>



<div class="row justify-content-center">
    <div class="col-10">


<p>
    <a href="@Url.Action("Create","Categories")" class="btn btn-success m-1 ">Thêm danh mục</a>

</p>
     
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Tên danh mục")
                </th>
                <th>
                    @Html.DisplayName("Số sản phẩm")
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountNumberProductByCategory)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","Categories",new{id = item.CategoryID})" class="btn btn-warning ">Cập nhật</a> |

                        <a href="@Url.Action("Delete","Categories",new{id = item.CategoryID})" class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    </div>
</div>


